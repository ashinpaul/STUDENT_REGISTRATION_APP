@page
@model IndexModel

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> <!-- Include jQuery here -->
<style>


    .login-container {
        background: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        width:50%
    }

    input {
        display: block;
        width: 100%;
        margin: 10px 0;
        padding: 10px;
    }

    button {
        width: 100%;
        padding: 10px;
        background: blue;
        color: white;
        border: none;
        cursor: pointer;
    }
</style>
<script>
    $(document).ready(function () {
        $("#loginButton").click(function () {
            var userid = $("#user").val();
            var pass = $("#pass").val();

            if (userid === "10001" && pass === "admin@123") {
                window.location.href = "./student"; // Correct redirection
            } else {
                alert("Wrong username or password");
            }
        });
    });
</script>
<center>
<div class="login-container">
    <h2>Login</h2>
    <input id="user" type="text" name="username" placeholder="Username" required>
    <input id="pass" type="password" name="password" placeholder="Password" required>
    <button id="loginButton" type="submit">Login</button>
</div>
</center>
